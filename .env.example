# Binance API Configuration
# Copy this file to .env and fill in your actual API credentials

# ==============================================================================
# PRODUCTION (LIVE TRADING) - USE WITH EXTREME CAUTION!
# ==============================================================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management

BINANCE_API_KEY=your_live_api_key_here
BINANCE_API_SECRET=your_live_api_secret_here

# Binance API Endpoint (Live)
BINANCE_API_URL=https://api.binance.com

# WebSocket URL (Live)
BINANCE_WS_URL=wss://stream.binance.com:9443/ws


# ==============================================================================
# TESTNET (PAPER TRADING) - RECOMMENDED FOR TESTING
# ==============================================================================
# Get your testnet API keys from: https://testnet.binance.vision/

BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Binance Testnet API Endpoint
BINANCE_TESTNET_API_URL=https://testnet.binance.vision

# WebSocket URL (Testnet)
BINANCE_TESTNET_WS_URL=wss://testnet.binance.vision/ws


# ==============================================================================
# ENVIRONMENT SELECTION
# ==============================================================================
# Set to 'testnet', 'live', or 'demo'
# - demo: Uses mock data, no real API calls
# - testnet: Uses Binance testnet (recommended for testing)
# - live: Uses real Binance account (USE WITH CAUTION!)

TRADING_MODE=demo


# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# API Key Permissions (Recommended settings):
# ✅ Enable Reading
# ✅ Enable Spot & Margin Trading (if needed)
# ❌ NEVER enable Withdrawals
# ✅ Enable IP Access Restrictions (whitelist your IP)

# IP Whitelist (comma separated, optional but HIGHLY recommended for live)
API_IP_WHITELIST=


# ==============================================================================
# TRADING SETTINGS
# ==============================================================================

# Maximum order size limits (safety feature)
MAX_ORDER_SIZE_USDT=1000

# Auto-trading enabled by default?
AUTO_TRADING_ENABLED=false

# Default leverage for futures trading
DEFAULT_LEVERAGE=1

# Risk management
MAX_POSITION_SIZE_PERCENT=10
MAX_DAILY_LOSS_PERCENT=5


# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Refresh interval for account data (milliseconds)
DATA_REFRESH_INTERVAL=10000

# Enable debug logging
DEBUG_MODE=true

# Timezone for timestamps
TIMEZONE=Europe/Berlin


# ==============================================================================
# IMPORTANT SECURITY NOTES
# ==============================================================================
#
# 1. NEVER commit the actual .env file to version control
# 2. NEVER share your API keys with anyone
# 3. ALWAYS test with testnet before using live trading
# 4. ALWAYS enable IP restrictions on your API keys
# 5. NEVER enable withdrawal permissions on trading API keys
# 6. ALWAYS use 2FA on your Binance account
# 7. REGULARLY rotate your API keys
# 8. MONITOR your account activity regularly
#
# ==============================================================================
